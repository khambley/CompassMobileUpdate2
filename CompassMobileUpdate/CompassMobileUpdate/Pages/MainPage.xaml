<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompassMobileUpdate.MainPage"
             BackgroundColor="#CC0033"
             Title="COMPASS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.33*" />
            <RowDefinition Height="0.33*" />
            <RowDefinition Height="0.33*" />
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0"
                BackgroundColor="#CC0033"
                ImageSource="search.png"
                Text="Search"
                FontSize="Large"
                TextColor="White"
                Scale="0.65"
                ContentLayout="Top,10" />

        <Button Grid.Row="1"
                BackgroundColor="#CC0033"
                ImageSource="barcode.png"
                Text="Scan"
                FontSize="Large"
                TextColor="White"
                Scale="0.65"
                ContentLayout="Top,10" />

        <Button Grid.Row="2"
                BackgroundColor="#CC0033"
                ImageSource="map.png"
                Text="Map"
                FontSize="Large"
                TextColor="White"
                Scale="0.65"
                ContentLayout="Top,10" />
    </Grid>

</ContentPage>

